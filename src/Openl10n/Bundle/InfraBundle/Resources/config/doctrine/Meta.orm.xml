<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity table="translation_meta" name="Openl10n\Bundle\InfraBundle\Entity\Meta">
        <unique-constraints>
            <unique-constraint name="idx_key" columns="key_id" />
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <one-to-one field="key" target-entity="Key">
            <join-column name="key_id" referenced-column-name="id" nullable="false" />
        </one-to-one>

        <field name="description" column="description" type="text" />
    </entity>

</doctrine-mapping>
